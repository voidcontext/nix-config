layout {
	tab focus=true {
		pane size=1 borderless=true {
			plugin location="zellij:compact-bar"
		}
		pane split_direction="vertical" {
			pane command="hx"

			pane {
				pane command="tail" {
					args "-f" ".metals/metals.log"
				}
				pane command="broot"
			}
		}
	}
	tab {
		pane size=1 borderless=true {
			plugin location="zellij:compact-bar"
		}
		pane split_direction="vertical" {
			pane

			pane {
				pane
				pane
			}
		}
	}
}
